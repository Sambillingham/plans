<header data-vide-bg="" data-vide-options="muted: false, position: 50% 20%" class="intro">
    <div class="intro__overlay"></div>
    <nav class="intro__nav" role="navigation">
        <%= link_to "Home", root_path, { :class => 'active'} %>
        <%= link_to "About", about_path %>
        <%= link_to "Projects", projects_path %>
        <%= link_to "New Plan", new_plan_path, { :class => 'btn'} %>
    </nav>
    <h1 class="intro__headline js-headline">Co Design Toolkit</h1>

    <a href="#about" class="intro__continue js-smooth-scroll">
        <%= image_tag 'arrow.png' %>
    </a>
</header>

<section id="about" class="about">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <p class="about__copy">The Co Design Toolkit is Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quae ex voluptas, aliquam ea rerum! Numquam quis quaerat recusandae dolores cupiditate nam inventore minus quo saepe, nihil? Dolorem fugit nam voluptates.</p>
            </div>
        </div>
    </div>
</section>

<section class="parallax parallax--toolkit js-parallax--toolkit">
    <div class="parallax__bg" style="background-image: url(<%= image_path('hill.jpg')%>);"></div>
    <div class="parallax__cta parallax__cta--br">
        <h2>Toolkit</h2>
        <p>Create Your own Co Design Plan. View online or have it emailed to you.</p>
        <%= link_to "Create a Plan", new_plan_path  %>
    </div>
</section>

