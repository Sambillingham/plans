.about {
    padding: 75px 0;

    .about__copy {
        @include font-size(30);
        @include line-height(38);
        font-weight: 600;
    }
}

.parallax {
    height: 500px;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;

    .parallax__cta {
        position: absolute;
        background-color: #fff;
        padding: 30px;
        max-width: 70%;
        width: 400px;

        h2 {
            margin: 0;
        }

        p {
            @include font-size(16);
        }
    }
    .parallax__cta--tl {
        top: 30px;
        left: 30px;
    }
    .parallax__cta--br {
        bottom: 30px;
        right: 30px;
    }
}
