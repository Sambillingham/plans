.about {
    padding: 75px 0;

    .about__copy {
        @include font-size(30);
        @include line-height(38);
        font-weight: 600;
    }
}

.toolkit {
    height: 500px;
    background: url(<%= image_url("fish.jpg") %>) center no-repeat;
    background-size: cover;
    position: relative;

    .toolkit__cta {
        position: absolute;
        bottom: 30px;
        right: 30px;
        background-color: #fff;
        padding: 30px;
        max-width: 70%;
        width: 400px;

        h2 {
            margin: 0;
        }

        p {
            @include font-size(16);
        }
    }
}


.project {
    padding: 100px 0;

    .project__item {
        background: url(http://placehold.it/1200x400) center no-repeat;
        background-size: cover;
        height: 300px;
        width: 100%;
        margin-bottom: 30px;
        transition: opacity 0.4s;

        span {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            color: #fff;
            @include font-size(32);
            font-weight: 200;
        }

        &:hover {
            opacity: 0.8;
        }
    }
}

nav {
    display: none;
    position: fixed;
    top: -75px;
    width: 100%;
}