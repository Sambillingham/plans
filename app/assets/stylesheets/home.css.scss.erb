.intro {
    height: 100%;
    position: relative;

    .intro__headline {
        color: #fff;
        text-transform: uppercase;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-90%);
        font-weight: 900;
        letter-spacing: 3px;
        @include font-size(70);
        opacity: 0.35;
    }
    .intro__continue {
        display: block;
        position: absolute;
        bottom: 20px;
        left: 50%;
        margin-left: -25px;
        opacity: 0.6;

        img {
            width: 50px;
            height: 50px;
        }
    }
    .intro__overlay {
        z-index: -1;
        height: 100%;
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
        @include linear-gradient(rgba(8, 81, 148, 0.28) 0%, transparent 35%, transparent 70%, rgba(0,0,0,0.78) 100%)
    }
    .intro__nav {
        float: right;
        z-index: 1080;
        padding-top: 15px;
        a {
            margin: 0 15px;
            padding: 14px 0 2px;
            @include font-size(12);
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 700;
            color: #fff;
            display: inline-block;

            &:hover,
            &.active {
                border-bottom: solid 2px #fff;
                text-decoration: none;
            }

            &.btn {
                padding: 10px 15px;
                border-color: #fff;
                text-transform: capitalize;
                font-weight: 400;
                height: 44px;
                line-height: 18px;
                @include font-size(14);


                &:hover{
                    color: #222;
                    background-color: #fff;
                }
            }
        }

    }
}

.about {
    padding: 75px 0;

    .about__copy {
        @include font-size(30);
        @include line-height(38);
        font-weight: 600;
    }
}

.project {
    padding: 100px 0;
    background-color: #fff;
    text-align: center;

    .project__item {
        background: url(http://placehold.it/1200x400) center no-repeat;
        background-size: cover;
        height: 300px;
        width: 100%;
        margin-bottom: 30px;
        transition: opacity 0.4s;

        span {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            color: #fff;
            @include font-size(32);
            font-weight: 200;
        }

        &:hover {
            opacity: 0.8;
        }
    }
    .projects__cta {
        text-align: center;

         a {
            border-bottom: solid 2px #222;
            color: #222;
            @include font-size(14);
            font-weight: 600;
            text-transform: uppercase;

            &:hover {
                text-decoration: none;
            }
        }
    }

}