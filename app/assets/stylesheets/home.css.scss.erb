.project {
    padding: 100px 0;

    .project__item {
        background: url(http://placehold.it/1200x400) center no-repeat;
        background-size: cover;
        height: 300px;
        width: 100%;
        margin-bottom: 30px;
        transition: opacity 0.4s;

        span {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            color: #fff;
            @include font-size(32);
            font-weight: 200;
        }

        &:hover {
            opacity: 0.8;
        }
    }
}

nav {
    background-color: #fff;
    z-index: 1030;
    position: fixed;
    top: -75px;
    width: 100%;
    transition: all 0.4s;
}