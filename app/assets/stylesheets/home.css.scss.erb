#parallax1,
#parallax2,
#parallax3,
.parallax {
    position: relative;
    overflow: hidden;
    height: 400px;
}

#parallax1 > div,
#parallax2 > div,
#parallax3 > div,
.parallax__bg {
    position: relative;
    height: 200%;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    -webkit-backface-visibility: hidden;
    -webkit-perspective: 1000;
}



